<div class="container-index justify-content-center mt-3">
    <% @tickets.each do |ticket| %>
      <div class="d-flex-ticket justify-content-between rounded-4">
        <div>
          <div>
            <%= link_to ticket_path(ticket), class: "" do%>
              <%if ticket.photos.attached?%>
                <%= cl_image_tag ticket.photos.first.key, alt: "Picture of #{ticket.title}", class: "" %>
              <%else%>
                <div class="card-product-infos">
                  <h2 class=""><strong><%= ticket.category %></strong>: <%= ticket.title %></h2>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex justify-content-between align-items-center ticket-show-p-font">
                      <% if ticket.status == "nouveau" %>
                        <span class="card-tkt-show-new rounded-pill align-items-center"><%= ticket.status.capitalize %></span>
                      <% elsif ticket.status == "en cours" %>
                        <span class="card-tkt-show-ongoing rounded-pill align-items-center"><%= ticket.status.capitalize %></span>
                      <% elsif ticket.status == "rÃ©solu" %>
                        <span class="card-tkt-show-solved rounded-pill align-items-center"><%= ticket.status.capitalize %></span>
                      <% end %>
                    </div>
                    <strong><p>Priority:
                      <span style="color: <%= progress_point(ticket.priority)[:color] %>">
                      <%= ticket.priority.humanize %>
                      </span>
                    </p></strong>
                  </div>
                  <p class=""><%= ticket.content %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>
