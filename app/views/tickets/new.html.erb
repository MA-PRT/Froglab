<div class="container mt-3" id="new-ticket-layout">
  <h1 class="text-center mb-4">Création de votre ticket</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body new-form">
          <%= simple_form_for @ticket, html: { class: "needs-validation" } do |f| %>
            <div class="mb-3">
              <%= f.input :photos,
                          label: 'Photo',
                          input_html: {
                            capture: 'user',
                            accept: 'image/*',
                            multiple: true },
                          input_html: { class: 'custom-file' } %>
            </div>
            <div class="mb-3">
              <%= f.input :title, label: 'Titre', input_html: { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.input :content, label: 'Description (optionnelle)', as: :text, input_html: { rows: 3, class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.input :priority,
                          label: 'Priorité',
                          collection: Ticket.priorities.keys.map { |p| [p.humanize, p] },
                          include_blank: false,
                          input_html: { class: 'form-control' } %>
            </div>
            <div class="mb-3">
              <%= f.input :category, label: 'Catégorie', input_html: { class: 'form-control' } %>
            </div>
            <div class="d-grid">
              <%= f.button :submit, 'Valider le ticket', class: 'orange-highlighted-button' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
